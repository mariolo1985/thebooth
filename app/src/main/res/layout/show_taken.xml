<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBgMain"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_show_imgCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10px"
            android:text=""
            android:textAlignment="center"
            android:textColor="#484848"
            android:textSize="40dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imgViewTaken"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:rotation="0" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:gravity="center">


        <Button
            android:id="@+id/btn_takeMorePictures"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_margin="15px"
            android:layout_weight=".5"
            android:background="@drawable/btn_custom"
            android:onClick="btnTakeMorePictures"
            android:padding="30px"
            android:text="take more pictures"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="30dp" />

        <Button
            android:id="@+id/btn_viewAll"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_margin="15px"
            android:layout_weight=".5"
            android:background="@drawable/btn_custom"
            android:onClick="btnViewAllClicked"
            android:padding="30px"
            android:text="end"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="30dp" />

    </LinearLayout>

</RelativeLayout>