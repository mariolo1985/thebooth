<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    android:orientation="vertical"
    tools:context="com.example.kinfonglo.teststreamer.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <ImageView
            android:id="@+id/imgViewLanding"
            android:layout_width="900px"
            android:layout_height="1600px"
            android:rotation="90" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="50dp"
        android:gravity="center">

        <Button
            android:id="@+id/btn_startPhotoBooth"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:onClick="onStartPhotoboothClick"
            android:padding="30px"
            android:text="@string/start_booth_label"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="40dp"
            android:background="#484848"
            />

    </LinearLayout>

</RelativeLayout>

