<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    android:orientation="vertical"
    tools:context="com.example.kinfonglo.photobooth.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_wbm_launcher" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WBM Photobooth"
                android:textAlignment="center"
                android:textColor="#484848"
                android:textSize="30dp"
                android:textStyle="bold"

                />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llViewLanding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="200dp"
        android:gravity="center"
        android:rotation="0">

        <ImageView
            android:id="@+id/imgViewLanding"
            android:layout_width="1600px"
            android:layout_height="900px"
            android:adjustViewBounds="false"
            android:rotation="0"
            android:scaleType="fitXY" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp"
        android:gravity="center">

        <Button
            android:id="@+id/btn_startPhotoBooth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_custom"
            android:onClick="onStartPhotoboothClick"
            android:layout_margin="30px"
            android:text="@string/start_booth_label"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="30dp"
            />

    </LinearLayout>

</RelativeLayout>

